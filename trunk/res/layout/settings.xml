<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<CheckBoxPreference
		android:key="location_data"
		android:defaultValue="true"
		android:title="@string/settings_location"
		android:summaryOn="@string/settings_location_on"
		android:summaryOff="@string/settings_location_off"
	/>
	<ListPreference
		android:key="data_format"
		android:title="@string/settings_data_format_title"
		android:summary="@string/settings_data_format_summary"
		android:entries="@array/data_formats"
		android:entryValues="@array/data_format_values"
		android:defaultValue="0"
	/>
	<PreferenceCategory
		android:orderingFromXml="true"
		android:title="@string/settings_backups_title"
		android:key="backups"
	>
		<!-- TODO: make this auto-generated -->
		<PreferenceScreen>
	        <intent
	            android:action="android.intent.ACTION_VIEW"
	            android:targetPackage="com.evancharlton.mileage"
	            android:targetClass="com.evancharlton.mileage.TransportSettingsActivity"
	        />
    	</PreferenceScreen>
	</PreferenceCategory>
	<!-- TODO(3.2) - Allow for interval-specific notifications -->
	<PreferenceCategory
		android:title="@string/settings_notification_title"
		android:key="notifications"
	>
		<CheckBoxPreference
			android:key="interval_notification_enabled"
			android:defaultValue="true"
			android:title="@string/settings_interval_enabled_title"
			android:summaryOn="@string/settings_interval_enabled_on"
			android:summaryOff="@string/settings_interval_enabled_off"
		/>
		<RingtonePreference
			android:layout="?android:attr/preferenceLayoutChild"
			android:dependency="interval_notification_enabled"
			android:key="interval_notification_ringtone"
			android:title="@string/settings_interval_sound"
			android:ringtoneType="notification"
			android:defaultValue="content://settings/system/notification_sound"
		/>
		<CheckBoxPreference
			android:key="interval_notification_led"
			android:dependency="interval_notification_enabled"
			android:defaultValue="true"
			android:title="@string/settings_interval_led"
			android:summaryOn="@string/settings_interval_led_on"
			android:summaryOff="@string/settings_interval_led_off"
		/>
		<CheckBoxPreference
			android:key="interval_notification_vibrate"
			android:dependency="interval_notification_enabled"
			android:defaultValue="true"
			android:title="@string/settings_interval_vibrate"
			android:summaryOn="@string/settings_interval_vibrate_on"
			android:summaryOff="@string/settings_interval_vibrate_off"
		/>
	</PreferenceCategory>
	<Preference
		android:key="about"
		android:title="@string/settings_about"
		android:summary="@string/settings_about_summary"
	/>
</PreferenceScreen>