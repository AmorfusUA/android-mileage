<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<ListPreference
		android:key="volume_pref"
		android:defaultValue="0"
		android:entries="@array/units_volume"
		android:entryValues="@array/values_volume"
		android:title="Volume"
		android:summary="@string/settings_volume_summary"
	/>
	<ListPreference
		android:key="distance_pref"
		android:defaultValue="0"
		android:entries="@array/units_distance"
		android:entryValues="@array/values_distance"
		android:title="Distance"
		android:summary="@string/settings_distance_summary"
	/>
	<ListPreference
		android:key="economy_pref"
		android:defaultValue="0"
		android:entries="@array/units_economy"
		android:entryValues="@array/values_economy"
		android:title="Fuel Economy"
		android:summary="@string/settings_economy_summary"
	/>
	<ListPreference
		android:key="date_pref"
		android:defaultValue="0"
		android:entries="@array/date_formats"
		android:entryValues="@array/date_patterns"
		android:title="Date format"
		android:summary="@string/settings_date_summary"
	/>
	<EditTextPreference
		android:key="currency_pref"
		android:defaultValue="$"
		android:title="Currency"
		android:summary="@string/settings_currency_summary"
	/>
	<CheckBoxPreference
		android:key="location_pref"
		android:defaultValue="true"
		android:title="Collect Location Data"
		android:summaryOn="@string/settings_location_on"
		android:summaryOff="@string/settings_location_off"
	/>
</PreferenceScreen>