				<action android:name="android.intent.action.PICK"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>
		<provider android:name="FillUpsProvider" android:authorities="com.evancharlton.provider.Mileage" />
	<activity android:launchMode="standard" android:name="FillUpView"><intent-filter><action android:name="android.intent.action.EDIT"></action>
<category android:name="android.intent.category.DEFAULT"></category>
